{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "../",
    "noEmit": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "allowUnreachableCode": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "test/customizeURL.spec.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types"]
}
