{
  "manifest_version": 2,
  "name": "Browser Sync",
  "description": "PC와 Mobile의 UI를 한 화면에서 동시에!",
  "default_locale": "ko",
  "sidebar_action": {
    "default_page": "index.html", 
    "default_icon": {                
      "16": "./icon/browser_sync_logo.png"
    },
    "default_title": "Browser Sync",      
    "use_navigation_bar": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension_content_script.bundle.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
