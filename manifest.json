{
  "manifest_version": 2,
  "name": "Device Sync",
  "version": "0.5.0",
  "description": "View desktop and mobile UI at the same time!",
  "icons": {},
  // "default_locale": "ko",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension_content_script.js"]
    }
  ], 
  "sidebar_action": {
    "default_page": "index.html", 
  //   "default_icon": {                
  //     "16": "images/logo5_1.png"
  // },
    "default_title": "Device Sync",      
    "use_navigation_bar": false
  }
}